<?xml version="1.0" encoding="UTF-8"?>

<templates id="template" xml:space="preserve">

    <t t-extend="ListView.buttons">
        <t t-jquery="button.o_list_button_discard" t-operation="after">
            <t t-if="widget.is_action_enabled('info')">


            <button class="btn btn-sm btn-default fa fa-info o_list_button_info" type="button" title="Legend"
                    data-toggle="modal" data-target="#Info"/>
            </t>

            <div class="modal fade" id="Info" tabindex="-1" role="dialog" aria-labelledby="InfoTitle">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&amp;times;</span>
                            </button>
                            <h4 class="modal-title" id="InfoTitle">Legend </h4>
                        </div>
                        <div class="modal-body">
                            <div id="InfoBody">

                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </t>

</templates>
