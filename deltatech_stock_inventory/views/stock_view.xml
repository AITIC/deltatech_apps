<?xml version="1.0"?>
<openerp>
    <data>

        <record id="view_inventory_form" model="ir.ui.view">
            <field name="name">stock.inventory.form</field>
            <field name="model">stock.inventory</field>

            <field name="inherit_id" ref="stock.view_inventory_form"/>
            <field name="arch" type="xml">

                <field name="state" position="before">
                    <!--<button name="action_remove_not_ok" states="confirm" string="Remove Not Ok" type="object"/>-->
                    <button name="action_new_for_not_ok" states="confirm" string="New inventory for Not Ok" type="object"/>
                </field>


                <field name="package_id" position="after">
                    <field name="filterbyrack"/>
                </field>
                <field name="date" position="after">
                    <field name="create_uid" readonly="1"/>
                </field>
                <notebook position="before">
                    <field name="note"/>
                </notebook>
                <field name="product_qty" position="after">
                    <field name="standard_price"/>
                    <field name="is_ok"/>
                </field>
            </field>
        </record>


        <!--low performance-->

        <!--<record id="view_stock_quant_tree" model="ir.ui.view">
