<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template id="assets_frontend" inherit_id="website.assets_frontend">
        <xpath expr="script[last()]" position="after">
            <script
                type="text/javascript"
                src="/deltatech_website_category_snippet/static/src/js/website_category_card.js"
            />
        </xpath>
        <xpath expr="//link[last()]" position="after">
            <link
                rel="stylesheet"
                type="text/scss"
                href="/deltatech_website_category_snippet/static/src/scss/s_category_card.scss"
            />
        </xpath>
    </template>
    <template id="assets_editor" inherit_id="website.assets_editor">
        <xpath expr="//script[last()]" position="after">
            <script
                type="text/javascript"
                src="/deltatech_website_category_snippet/static/src/js/website_category_card_editor.js"
            />
        </xpath>
    </template>


    <template
        id="product_category"
        inherit_id="website_sale.products"
        active="True"
        customize_show="True"
        name="Subcategory List"
    >
        <xpath expr="//div[@id='category_header']" position="before">
          <section
                class="s_wsale_category_card pt24 pb24 d-none"
                style="min-height: 200px;"
                t-att-data-id="category.id"
                data-object="product.public.category"
                data-name="Category Card"
            >
            <div class="container">
              <div class="subcategory_list o_not_editable" />
            </div>
          </section>
        </xpath>
    </template>

</odoo>
