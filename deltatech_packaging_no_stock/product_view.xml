<?xml version="1.0"?>
<openerp>
   <data>



 
      <record id="product_template_form_view" model="ir.ui.view">
         <field name="name">product.template.common.form</field>
         <field name="model">product.template</field>
         <field name="inherit_id" ref="product.product_template_form_view" />
         <field name="arch" type="xml">
            <field name="weight_net" position="after">
               <field name="pack_items" />
            </field>
         </field>
      </record>

 
 

 
      <record id="view_packing_doc_tree" model="ir.ui.view">
         <field name="name">Packing Document</field>
         <field name="model">packing.doc</field>
         <field name="arch" type="xml">
            <tree string="Packing Document" fonts="bold:message_unread==True"
               colors="grey:state in ('cancel')">
               <field name="name" />
 
               <field name="state" />

               <field name="message_unread" invisible="1" />
            </tree>
         </field>
      </record>
  
      <record id="view_packing_doc_form" model="ir.ui.view">
         <field name="name">Packing Document</field>
         <field name="model">packing.doc</field>
         <field name="arch" type="xml">
            <form string="Packing Document">
               <header>
                  <button name="validate" states="open" type="object"
                     class="oe_highlight" string="Validate" />
                  <field name="state" widget="statusbar" statusbar_visible="draft,done" />
               </header>
               <sheet>
                  <div class="oe_title oe_left">
                     <h1>
                        <label string="Packing" />
                        <field name="name" class="oe_inline" />
                     </h1>
                  </div>
                  <div class="oe_right oe_button_box" name="buttons">


                  </div>
                  <group>
                     <group>
                        <field name="date" />
 
                     </group>
                     <group>

                     </group>
                  </group>
                  <field name="itme_ids" >
                     <tree   editable="bottom">
                        <field name="name" />
                        <field name="product_id" />
                        <field name="quantity" />
 
                     </tree>
                  </field>

  

               </sheet>
               <div class="oe_chatter">
                  <field name="message_follower_ids" widget="mail_followers"
                     groups="base.group_user" />
                  <field name="message_ids" widget="mail_thread" placeholder="Share a message..." />
               </div>
            </form>
         </field>
      </record>
 
 
 

      <record id="action_packing_doc" model="ir.actions.act_window">
         <field name="name">Packing Document</field>
         <field name="res_model">packing.doc</field>
         <field name="view_type">form</field>
         <field name="view_mode">tree,form</field>
         <field name="context">{}</field>
      </record>
 
 


 
   <menuitem action="action_packing_doc" id="menu_action_packing_doc" parent="account.menu_finance_receivables"/>



   </data>
</openerp>
