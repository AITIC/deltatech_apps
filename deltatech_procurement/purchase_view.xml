            <field name="name">Purchase Order</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_2_stock_picking"/>
            <field name="arch" type="xml">
                
                    <div name="buttons" position="inside">
                        <button type="object" name="view_procurement"
                            class="oe_stat_button"
                            icon="fa-stack-overflow"
                            attrs="{'invisible': [('procurement_count', '=', 0)]}">
                            <field name="procurement_count" widget="statinfo" string="Procurements"/>
                        </button>
  
                   </div>

            </field>
        </record>
        
        
    </data>
</openerp>