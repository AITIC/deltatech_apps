<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_account_move_report_tree" model="ir.ui.view">
            <field name="name">account.move.report.tree</field>
            <field name="model">account.move.report</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Account Product Report" create="false">
                    <field name="product_id" />
                    <field name="date" />
                    <field name="account_id" />
                    <field name="balance" sum="1"/>
                    <field name="quantity" sum="1"/>
                </tree>
            </field>
        </record>



        <record id="view_account_move_report_graph" model="ir.ui.view">
            <field name="name">account.move.report.graph</field>
            <field name="model">account.move.report</field>
            <field name="arch" type="xml">
                <graph string="Account Product Report" type="pivot" stacked="True">
                    <field name="categ_id" type="row"/>
                    <field name="product_id" type="row"/>
                    <field name="balance" type="measure"/>
                </graph>
            </field>
        </record>


        <record id="view_account_move_report_pivot" model="ir.ui.view" >
            <field name="name">account.move.report.pivot</field>
            <field name="model">account.move.report</field>
            <field name="arch" type="xml">
                <pivot string="Account Product Report" disable_linking="True">
                    <field name="categ_id" type="row"/>
                    <field name="product_id" type="row"/>
                    <field name="balance" type="measure"/>
                    <field name="quantity" type="measure"/>
                    <field name="journal_id" type="col"/>
                </pivot>
            </field>
        </record>


        <record id="view_account_move_report_filter" model="ir.ui.view">
            <field name="name">account.move.report.select</field>
            <field name="model">account.move.report</field>
            <field name="type">search</field>
            <field name="arch" type="xml">
                <search string="Search">

                    <field name="date"/>
                    <field name="product_id"/>
                    <field name="account_id"/>
                    <field name="journal_id"/>
                    <field name="categ_id"/>
                    <field name="manufacturer"/>

                    <filter string="This Year" name="year"
                            domain="[('date','&lt;=', time.strftime('%%Y-12-31')),('date','&gt;=',time.strftime('%%Y-01-01'))]"
                            help="Sales performed during current year"/>

                    <filter string="This Month" name="month"
                            domain="[('date','&gt;=', (context_today() + relativedelta(day=01, months=0, days=0)).strftime('%%Y-%%m-%%d')),
								 ('date','&lt;=', (context_today() + relativedelta(day=01, months=1, days=-1)).strftime('%%Y-%%m-%%d')) ]"
                    />

                    <filter string="Previous Month" name="prev_month"
                            domain="[('date','&gt;=', (context_today() + relativedelta(day=01, months=-1, days=0)).strftime('%%Y-%%m-%%d')),
								 ('date','&lt;=', (context_today() + relativedelta(day=01, months=0, days=-1)).strftime('%%Y-%%m-%%d')) ]"
                    />

                    <filter string="Previous Day" name="prev_day"
                            domain="[ ('date','=', (context_today() + relativedelta(day=01, months=01, days=-1)).strftime('%%Y-%%m-%%d')) ]"
                    />

                    <separator/>
                    <group expand="0" string="Extended Filters...">
                        <field name="categ_id"/>
                        <field name="company_id" groups="base.group_multi_company"/>
                    </group>
                    <group expand="1" string="Group By...">

                        <filter string="Product" name="product" context="{'group_by':'product_id'}"/>

                        <filter string="Category" name="category" context="{'group_by':'categ_id'}"/>
                        <filter string="Journal" name="journal" context="{'group_by':'journal_id'}"/>
                        <filter string="Company" groups="base.group_multi_company" context="{'group_by':'company_id'}"/>
                        <filter string="Date" context="{'group_by':'date:month'}"/>

                    </group>
                </search>
            </field>
        </record>


        <record id="action_account_move_report" model="ir.actions.act_window">
            <field name="name">Account Product Report</field>
            <field name="res_model">account.move.report</field>
            <field name="view_type">form</field>
            <field name="view_mode">pivot,tree,graph</field>
        </record>


        <menuitem id="menu_account_move_report" name="Account Product Report"
                  action="action_account_move_report"
                  parent="account.account_reports_business_intelligence_menu" />


    </data>
</openerp>