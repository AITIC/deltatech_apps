<?xml version="1.0" ?>
<openerp>
    <data>


        <record id="view_account_invoice_filter" model="ir.ui.view">
            <field name="name">account.invoice.select</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.view_account_invoice_filter"/>
            <field name="arch" type="xml">
                <filter name="unpaid" position="after">
                    <filter name="service" string="Services Agreements" domain="[('agreement_id','!=',False)]"/>
                </filter>
                <field name="period_id" position="after">
                    <field name="agreement_id"/>
                </field>
            </field>
        </record>

        <record id="action_service_invoice" model="ir.actions.act_window">
            <field name="name">Service Invoices</field>
            <field name="res_model">account.invoice</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field eval="False" name="view_id"/>
            <field name="domain">[('type','=','out_invoice')]</field>
            <field name="context">{'search_default_service':1, 'default_type':'out_invoice', 'type':'out_invoice',
                'journal_type': 'sale'}
            </field>
            <field name="search_view_id" ref="account.view_account_invoice_filter"/>
        </record>

        <record id="action_service_invoice_tree_view" model="ir.actions.act_window.view">
            <field eval="1" name="sequence"/>
            <field name="view_mode">tree</field>
            <field name="act_window_id" ref="action_service_invoice"/>
        </record>

        <record id="action_service_invoice_form_view" model="ir.actions.act_window.view">
            <field eval="2" name="sequence"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="account.invoice_form"/>
            <field name="act_window_id" ref="action_service_invoice"/>
        </record>


        <menuitem name="Service Invoice" id="menu_service_invoice" action="action_service_invoice"
                  parent="base.menu_service_agr" sequence="110"/>


        <record id="view_service_agreement_tree" model="ir.ui.view">
            <field name="name">Services Agreements</field>
            <field name="model">service.agreement</field>
            <field name="arch" type="xml">
                <tree string="Services Agreements" fonts="bold:message_unread==True" colors="grey:state in ('cancel','closed');blue: meter_reading_status==True"  default_order="create_date desc">
                    <field name="name"/>
                    <field name="date_agreement"/>
                    <field name="partner_id"/>
                    <field name="description"/>
                    <field name="state"/>
                    <field name="meter_reading_status"/>
                    <field name="type_id"/>
                    <field name="total_consumption" sum="consumption"/>
                    <field name="total_invoiced" sum="invoiced"/>
                    <field name="message_unread" invisible="1"/>
                    <field name="last_invoice_date"/>
                    <field name="next_date_invoice"/>
                    <!--<field name="invoicing_status"/>-->

                </tree>
            </field>
        </record>

        <record id="view_service_agreement_form" model="ir.ui.view">
            <field name="name">Service Agreement</field>
            <field name="model">service.agreement</field>
            <field name="arch" type="xml">
                <form string="Service Agreement">
                    <header>
                        <button name="contract_close" states="open" type="object" class="oe_highlight"
                                string="Terminate Contract"/>
                        <button name="contract_open" states="draft" type="object" class="oe_highlight"
                                string="Set In Progress"/>
                        <button name="contract_draft" states="closed" type="object" class="oe_highlight"
                                string="Set Draft"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,open,closed"/>
                    </header>
                    <sheet>
                        <div class="oe_title oe_left">
                            <h1>
                                <label string="Agreement"/>
                                <field name="name" class="oe_inline"/>
                            </h1>
                        </div>
                        <div class="oe_right oe_button_box" name="buttons">
                            <button type="action" class="oe_stat_button" id="invoice_button" icon="fa-pencil-square-o"
                                    name="%(action_service_invoice)d"
                                    context="{'search_default_agreement_id': id,
										  'default_agreement_id': id,
										  'default_partner_id': partner_id }" groups="account.group_account_invoice">
                                <div>
                                    <strong>
                                        <field name="total_invoiced" widget="monetary"/>
                                    </strong>
                                    <br/>
                                    Invoices
                                </div>
                            </button>

                            <button type="action" class="oe_stat_button" id="consumption_button" icon="fa-line-chart"
                                    name="%(action_service_consumption)d"
                                    context="{'search_default_agreement_id': id,
										 
										  'search_default_done': 1,
										  'default_agreement_id': id,
										  'default_partner_id': partner_id }">
                                <div>
                                    <strong>
                                        <field name="total_consumption" widget="monetary"/>
                                    </strong>
                                    <br/>
                                    Revenues
                                </div>
                            </button>

                        </div>
                        <group>
                            <group>
                                <field name="meter_reading_status" style="background-color:red;"/>
                                <field name="date_agreement"/>
                                <field name="final_date"/>
                                <field name="type_id"/>
                                <field name="partner_id"/>
                                <field name="description" style="background-color:#d2ff4d;font-weight:bold"/>
                                <field name="currency_id" options="{'no_create': True}"/>
                            </group>
                            <group>
                                <field name="cycle_id"/>
                                <field name="invoice_mode"/>
                                <field name="last_invoice_id"/>
                                <field name="invoice_day"/>
                                <field name="next_date_invoice"/>
                                <field name="prepare_invoice_day"/>
                                <!--<field name="invoicing_status"/>-->
                                <field name="billing_automation"/>
                            </group>
                        </group>
                        <label for="notes" string="Note"/>
                        <field name="notes" string="Note" style="width:800px;background-color:#ff9999;"/>
                        <field name="agreement_line" context="{'default_currency_id':currency_id}">
                            <tree string="Agreement Lines" editable="bottom"
                                  colors=" red:price_unit==1; red:price_unit==0;" default_order="create_date desc">

                                <field name="sequence"/>
                                <field name="product_id"/>
                                <field name="quantity"/>
                                <field name="uom_id" groups="product.group_uom"/>
                                <field name="price_unit"/>
                                <field name="currency_id" options="{'no_create': True}"/>
                                <!--<field name="quantity_free" /> -->
                            </tree>
                        </field>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="message_ids" widget="mail_thread" placeholder="Share a message..."/>
                    </div>
                </form>
            </field>
        </record>

        <record id="view_service_agreement_filter" model="ir.ui.view">
            <field name="name">service.agreement.select</field>
            <field name="model">service.agreement</field>
            <field name="type">search</field>
            <field name="arch" type="xml">
                <search string="Search">
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="type_id"/>
                    <field name="cycle_id" string="Agreement"/>
                    <newline/>
                    <!--<filter string="Whitout invoice in this month" name="month"-->
                            <!--domain="['|',('last_invoice_date','&lt;', (context_today() + relativedelta(day=01, months=0, days=0)).strftime('%%Y-%%m-%%d')),-->
								 <!--('last_invoice_date','&gt;', (context_today() + relativedelta(day=01, months=1, days=-1)).strftime('%%Y-%%m-%%d')) ]"/>-->
                    <filter string="Readings done" name="meter_reading_status" domain="[('meter_reading_status','=',True)]" />
                    <filter string="Without readings" name="meter_reading_status" domain="[('meter_reading_status','=',False)]" />
                    <group expand="1" string="Group By...">
                        <filter string="Partner" name="partner" context="{'group_by':'partner_id'}"/>
                        <filter string="Type" name="type" context="{'group_by':'type_id'}"/>
                        <filter string="Cycle" name="cycle" context="{'group_by':'cycle_id'}"/>
                        <filter string="Next invoice date" name="next_invoice" context="{'group_by':'next_date_invoice:day'}"/>
                    </group>
                </search>
            </field>
        </record>


        <record id="action_service_agreement" model="ir.actions.act_window">
            <field name="name">Services Agreements</field>
            <field name="res_model">service.agreement</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem name="Services Agreements" id="menu_service_agreement" action="action_service_agreement"
                  parent="base.menu_service_agr" sequence="100"/>


        <record id="view_service_agreement_line_tree" model="ir.ui.view">
            <field name="name">Services Agreement Lines</field>
            <field name="model">service.agreement.line</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="agreement_id"/>
                    <field name="product_id"/>
                    <field name="quantity"/>
                    <field name="uom_id" groups="product.group_uom"/>
                    <field name="price_unit"/>
                    <field name="currency_id" options="{'no_create': True}"/>
                </tree>
            </field>
        </record>

        <record id="view_service_agreement_line_form" model="ir.ui.view">
            <field name="name">Service Agreement Lines</field>
            <field name="model">service.agreement.line</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="agreement_id"/>
                            <field name="product_id"/>
                        </group>
                        <group>
                            <field name="quantity"/>
                            <field name="uom_id" groups="product.group_uom"/>
                            <field name="price_unit"/>
                            <field name="currency_id" options="{'no_create': True}"/>
                        </group>
                        <group>
                            <field name="active"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_service_agreement_line_filter" model="ir.ui.view">
            <field name="name">service.agreement.line.select</field>
            <field name="model">service.agreement.line</field>
            <field name="type">search</field>
            <field name="arch" type="xml">
                <search string="Search">
                    <field name="agreement_id"/>
                    <field name="product_id"/>
                </search>
            </field>
        </record>


        <record id="action_service_agreement_line" model="ir.actions.act_window">
            <field name="name">Services Agreement Lines</field>
            <field name="res_model">service.agreement.line</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem name="Services Agreement Lines" id="menu_service_agreement_line"
                  action="action_service_agreement_line" parent="base.menu_service_agr" sequence="101"/>


        <record id="action_update_revenues" model="ir.actions.server">
            <field name="name">Update Revenues</field>
            <field name="model_id" ref="model_service_agreement"/>
            <field name="state">code</field>
            <field name="code">action = self.compute_totals(cr, uid, context.get('active_ids', []), context=context)
            </field>
        </record>

        <record id="more_item_update_revenues" model="ir.values">
            <field name="key2" eval="'client_action_multi'"/>
            <field name="model" eval="'service.agreement'"/>
            <field name="name">Update Revenues</field>
            <field name="value" eval="'ir.actions.server,%d'%action_update_revenues"/>
        </record>


        <record id="action_update_invoicing_status" model="ir.actions.server">
            <field name="name">Update Invoicing Status</field>
            <field name="model_id" ref="model_service_agreement"/>
            <field name="state">code</field>
            <field name="code">action = self._compute_invoicing_status(cr, uid, context.get('active_ids', []),
                context=context)
            </field>
        </record>

        <record id="more_item_update_invoicing_status" model="ir.values">
            <field name="key2" eval="'client_action_multi'"/>
            <field name="model" eval="'service.agreement'"/>
            <field name="name">Update Invoicing Status</field>
            <field name="value" eval="'ir.actions.server,%d'%action_update_invoicing_status"/>
        </record>


        <record id="action_service_agreement_type" model="ir.actions.act_window">
            <field name="name">Services Agreements Type</field>
            <field name="res_model">service.agreement.type</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem name="Services Agreement Type" id="menu_service_agreement_type" action="action_service_agreement_type"
                  parent="base.menu_service_config"
                  sequence="100"/>

        <record id="action_service_cycle" model="ir.actions.act_window">
            <field name="name">Service Cycle</field>
            <field name="res_model">service.cycle</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem name="Cycle" id="menu_service_cycle" action="action_service_cycle" parent="base.menu_service_config"/>


    </data>


</openerp>