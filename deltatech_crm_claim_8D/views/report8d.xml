<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
		<template id="report_8d">

			<t t-call="report.html_container">
				<t t-foreach="docs" t-as="o">
					<t t-call="report.external_layout">
						<div class="page">
							 
								<br />
								<h3>
									<span>8D Report</span>
									<span t-field="o.date" />
								</h3>


								<div class="row mt32">
									<div class="col-xs-4">
										<strong>Customer:</strong>
										<p t-field="o.partner_id" />
									</div>
									<div class="col-xs-4">
										<strong>Issued by:</strong>
										<p t-field="o.user_id" />
									</div>
									<div class="col-xs-4">
										<strong>Detected in:</strong>
										<p t-field="o.loc_detected" />
									</div>
								</div>	
								<div class="row mb32">	
									<div class="col-xs-4">
										<strong>Product:</strong>
										<p t-field="o.product_id.name" />
									</div>

									<div class="col-xs-4">
										<strong>Quantity:</strong>
										<p t-field="o.quantity" />
									</div>
									<div class="col-xs-4">
										<strong>Code:</strong>
										<p t-field="o.product_id.default_code" />
									</div>
								</div>
								<h4>
									<span>1. Team:</span>
								</h4>
								<div class="row" >
									<t t-foreach="o.user_ids" t-as="u">
										<div class="col-xs-2">
											<span t-field="u.name" />
											<p t-field="u.partner_id.function" />
										</div>
									</t>
								</div>
								
								<h4>
									<span>2. Problem description:</span>
								</h4>
								<div class="row" >
								<p t-field="o.description" />
								</div>
							 
								<h4>
									<span>3. Containment actions:</span>
								</h4>
								<div class="row" >
								<table class="table table-condensed">
									<thead>
										<tr>
											<th>
												<strong>Action</strong>
											</th>
											<th>
												<strong>Responsible</strong>
											</th>
											<th>
												<strong>Date</strong>
											</th>
										</tr>
									</thead>
									<tbody>
										<tr t-foreach="o.action_containment_ids" t-as="l">
											<td>
												<span t-field="l.name" />
											</td>
											<td>
												<span t-field="l.user_id" />
											</td>
											<td>
												<span t-field="o.date_deadline" />
											</td>
										</tr>
									</tbody>
								</table>
								</div>
								 
								<h4>
									<span>4. Root causes:</span>
								</h4>
								<p t-field="o.cause" />
							 
								<h4>
									<span>5. Permanent Corrective actions:</span>
								</h4>
								<table class="table table-condensed">
									<thead>
										<tr>
											<th>
												<strong>Action</strong>
											</th>
											<th>
												<strong>Responsible</strong>
											</th>
											<th>
												<strong>Date</strong>
											</th>
										</tr>
									</thead>
									<tbody>
										<tr t-foreach="o.action_corrective_ids" t-as="l">
											<td>
												<span t-field="l.name" />
											</td>
											<td>
												<span t-field="l.user_id" />
											</td>
											<td>
												<span t-field="o.date_deadline" />
											</td>
										</tr>
									</tbody>
								</table>

								 
								<h4>
									<span>6. Effectiveness verification:</span>
								</h4>
								<table class="table table-condensed">
									<thead>
										<tr>
											<th>
												<strong>Action</strong>
											</th>
											<th>
												<strong>Responsible</strong>
											</th>
											<th>
												<strong>Date</strong>
											</th>
										</tr>
									</thead>
									<tbody>
										<tr t-foreach="o.action_verification_ids" t-as="l">
											<td>
												<span t-field="l.name" />
											</td>
											<td>
												<span t-field="l.user_id" />
											</td>
											<td>
												<span t-field="o.date_deadline" />
											</td>
										</tr>
									</tbody>
								</table>

								 
								<h4>
									<span>7. Preventive actions:</span>
								</h4>
								<table class="table table-condensed">
									<thead>
										<tr>
											<th>
												<strong>Action</strong>
											</th>
											<th>
												<strong>Responsible</strong>
											</th>
											<th>
												<strong>Date</strong>
											</th>
										</tr>
									</thead>
									<tbody>
										<tr t-foreach="o.action_preventive_ids" t-as="l">
											<td>
												<span t-field="l.name" />
											</td>
											<td>
												<span t-field="l.user_id" />
											</td>
											<td>
												<span t-field="o.date_deadline" />
											</td>
										</tr>
									</tbody>
								</table>

								 
								<h4>
									<span>8. Comments:</span>
								</h4>
								<p t-field="o.comments" />
								
								<div class="row mt32 mb32" id="informations">
									<div class="col-xs-6">
										<strong>Date:</strong>
										<p t-field="o.date_closed" />
									</div>
	
									
									<div class="col-xs-6">
										<strong>Signature</strong>
										<p/>
									</div>
								</div>
								
							</div>
						 
					</t>
				</t>
			</t>
		</template>


		<report string="Report 8D" id="action_report_8d" model="crm.claim" report_type="qweb-pdf" name="deltatech_crm_claim_8D.report_8d" file="deltatech_crm_claim_8D.report_8d" />

	</data>
</openerp>