<?xml version="1.0" encoding="utf-8"?><odoo>    <data>        <record id="mrp_production_form_view" model="ir.ui.view">            <field name="name">mrp.production.form</field>            <field name="model">mrp.production</field>            <field name="inherit_id" ref="mrp.mrp_production_form_view"/>            <field name="arch" type="xml">                <button name="button_unreserve" position="after">                    <button name="%(action_mrp_production_conf)d" type="action" string="Confirmation"                            attrs="{'invisible': ['|',('workorder_count', '=', 0),('state','in',['done','cancel'])]}"/>                </button>                <xpath expr="//field[@name='move_raw_ids']//field[@name='product_id']" position="after">                    <button name="show_production" string="Show source" type="object" icon="fa-shopping-cart"                            attrs="{'invisible': [('state', 'in', ['done','cancel'])]}"/>                </xpath>            </field>        </record>    </data></odoo>