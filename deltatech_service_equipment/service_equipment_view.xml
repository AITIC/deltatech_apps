<?xml version="1.0" ?>
<openerp>
    <data>

        <record id="view_service_equipment_history_tree" model="ir.ui.view">
            <field name="name">Services equipment history</field>
            <field name="model">service.equipment.history</field>
            <field name="arch" type="xml">
                <tree string="Services Equipment History" create="false">
                    <field name="equipment_id"/>
                    <field name="partner_id"/>
                    <field name="address_id"/>
                    <field name="emplacement"/>
                    <field name="from_date"/>
                </tree>
            </field>
        </record>

        <record id="view_service_equipment_history_filter" model="ir.ui.view">
            <field name="name">service.equipment.history.select</field>
            <field name="model">service.equipment.history</field>
            <field name="type">search</field>
            <field name="arch" type="xml">
                <search string="Search">
                    <field name="equipment_id"/>
                    <field name="partner_id"/>
                    <field name="address_id"/>
                </search>
            </field>
        </record>


        <record id="view_service_equipment_tree" model="ir.ui.view">
            <field name="name">Services equipment</field>
            <field name="model">service.equipment</field>
            <field name="arch" type="xml">
                <tree string="Services Equipment">
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="address_id"/>
                    <field name="emplacement" invisible="1"/>
                    <field name="product_id" invisible="1"/>
                    <field name="serial_id"/>
                    <field name="quant_id" invisible="1"/>
                    <field name="start_date" invisible="1"/>
                    <field name="agreement_type_id"/>
                    <field name="install_date"/>
                    <field name="total_revenues" sum="total"/>
                    <field name="total_costs" sum="total"/>
                    <field name="inventory_value" sum="total"/>
                    <field name="readings_status"/>
                    <field name="last_reading"/>
                    <field name="message_unread" invisible="1"/>
                </tree>
            </field>
        </record>


        <record id="mt_equipment_change_status" model="mail.message.subtype">
            <field name="name">Change status</field>
            <field name="res_model">service.equipment</field>
            <field name="default" eval="False"/>
            <field name="description">Equipment change status</field>
        </record>

        <record id="view_service_equipment_form" model="ir.ui.view">
            <field name="name">Service equipment</field>
            <field name="model">service.equipment</field>
            <field name="arch" type="xml">
                <form string="Service Equipment">
                    <header>
                        <button name="new_piking_button" type="object" string="Delivery for service"/>
                        <button name="%(action_service_equi_ins)d" type="action" string="Install" class="oe_highlight"
                                states="available"/>
                        <button name="%(action_service_equi_ebk)d" type="action" string="Enable Backup"
                                states="installed"/>
                        <button name="%(action_service_equi_dbk)d" type="action" string="Disable Backup"
                                class="oe_highlight" states="backuped"/>
                        <button name="%(action_service_equi_rem)d" type="action" string="Remove" state="installed"/>
                        <button name="create_meters_button" type="object" string="Create Meters"
                                attrs="{'invisible':['|',('meter_ids','!=',[])]}"/>
                        <button name="%(action_service_equi_agreement)d" type="action" string="Add to Agreement"
                                state="installed"
                                attrs="{'invisible':['|',('agreement_id','!=',False)]}"/>
                        <button name="remove_from_agreement_button" type="object" string="Remove from Agreement"
                                state="available"
                                attrs="{'invisible':['|',('agreement_id','==',False)]}"/>
                        <field name="state" widget="statusbar" statusbar_visible="available,installed"
                               statusbar_colors='{"backuped":"red"}'/>
                    </header>
                    <sheet>
                        <div class="oe_title oe_left">
                            <h1>
                                <label string="Equipment"/>
                                <field name="name" class="oe_inline"/>
                            </h1>
                        </div>
                        <div class="oe_title oe_left" attrs="{'invisible':[('state','!=','backuped')]}">
                            <h1>
                                <label string="Backup Equipment" class="oe_inline"/>
                                <field name="equipment_backup_id" class="oe_inline"/>
                            </h1>
                        </div>
                        <div class="oe_right oe_button_box" name="buttons">
                            <button type="action" class="oe_stat_button" id="meter_button" icon="fa fa-slack"
                                    name="%(action_service_meter)d"
                                    context="{'search_default_equipment_id': id,'default_equipment_id': id}">
                                <div>Meters</div>
                            </button>

                            <button type="action" class="oe_stat_button" id="meter_reading_button"
                                    icon="fa fa-tachometer" name="%(action_service_meter_reading)d"
                                    context="{'search_default_equipment_id': id,'default_equipment_id': id}">
                                <div>Meter Readings</div>
                            </button>
                            <button type="object" class="oe_stat_button" id="invoice_button" icon="fa-pencil-square-o"
                                    name="invoice_button" groups="account.group_account_invoice">
                                <div>Invoiced</div>
                            </button>


                            <button type="action" class="oe_stat_button" id="consumption_button" icon="fa-line-chart"
                                    name="%(deltatech_service.action_service_consumption)d"
                                    context="{'search_default_equipment_id': id,
										 
										  'search_default_done': 1,
										 
										  'default_partner_id': partner_id }">
                                <div>
                                    <strong>
                                        <field name="total_revenues" widget="monetary"/>
                                    </strong>
                                    <br/>
                                    Revenues
                                </div>
                            </button>


                            <button type="object" class="oe_stat_button" id="picking_button" icon="fa-sign-out"
                                    name="picking_button">
                                <div>
                                    <strong>
                                        <field name="total_costs" widget="monetary"/>
                                    </strong>
                                    <br/>
                                    Costs
                                </div>
                            </button>


                        </div>
                        <group>
                            <group col="1">
                                <group string="Installed At">
                                    <field name="partner_id"/>
                                    <field name="address_id" context="{'search_default_customer':1, 'show_address': 1 }"
                                           options="{'always_reload': True}"/>

                                    <field name="emplacement"/>
                                    <field name="install_date"/>
                                </group>
                                <group string="Agreement">
                                    <field name="contact_id" context="{'search_default_customer':1,   'show_phone':1}"
                                           options="{'always_reload': True}"/>

                                    <field name="agreement_id"/>
                                    <field name="agreement_type_id"/>
                                    <field name="user_id"/>
                                </group>
                            </group>
                            <group col="1">
                                <group string="Tehnical Details">
                                    <field name="type_id"/>
                                    <field name="product_id"/>
                                    <field name="ean_code"/>

                                </group>
                                <group string="Stock">
                                    <field name="serial_id" domain="[('product_id','=',product_id)]" context="{'default_product_id':product_id,
														          'product_id':product_id }"/>
                                    <field name="quant_id" domain="[('product_id','=',product_id )]"/>
                                    <field name="inventory_value"/>

                                    <field name="vendor_id"/>
                                    <field name="manufacturer_id"/>
                                    <field name="start_date"/>

                                </group>
                            </group>


                        </group>
                        <notebook>
                            <page id='meters' string="Meters">
                                <group>
                                    <field name="reading_day"/>
                                    <field name="last_reading"/>
                                    <field name="next_reading"/>
                                    <field name="readings_status"/>
                                </group>
                                <field name="meter_ids" nolabel="1" widget="one2many_list">
                                    <tree string="Meters" editable="bottom">
                                        <field name="name"/>
                                        <field name="meter_categ_id"/>
                                        <field name="uom_id"/>
                                        <field name="total_counter_value"/>
                                        <field name="estimated_value"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>

                        <group>
                            <group>

                                <field name="consumable_item_ids" widget="many2many_kanban" nolabel="1" colspan="2"
                                       context="{'equipment_id': id}">
                                    <kanban>
                                        <field name="product_id"/>
                                        <field name="shelf_life"/>
                                        <field name="colors"/>
                                        <templates>
                                            <t t-name="kanban-box">
                                                <div class="oe_kanban_card">
                                                    <div class="oe_dropdown_toggle oe_dropdown_kanban">

                                                    </div>
                                                    <div class="oe_kanban_content">
                                                        <field name="quantity" widget="gauge"
                                                               style="width:150px; height: 110px;"
                                                               t-attf-options="{'levelcolors': #{record.colors.raw_value}, 'max_field': 'shelf_life'}">
                                                            <field name="product_id"/>
                                                        </field>
                                                    </div>
                                                    <div class="oe_clear"></div>
                                                </div>
                                            </t>
                                        </templates>
                                    </kanban>
                                </field>
                            </group>
                        </group>
                        <field name="note"/>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="message_ids" widget="mail_thread" placeholder="Share a message..."/>
                    </div>
                </form>
            </field>
        </record>

        <record id="view_service_equipment_filter" model="ir.ui.view">
            <field name="name">service.equipment.select</field>
            <field name="model">service.equipment</field>
            <field name="type">search</field>
            <field name="arch" type="xml">
                <search string="Search">
                    <field name="serial_id"/>
                    <field name="partner_id"/>
                    <field name="product_id"/>
                    <field name="note"/>

                    <field name="ean_code"/>
                    <field name="agreement_type_id"/>
                    <field name="contact_id"/>
                    <newline/>
                    <filter string="Whitout reading in this month" name="month"
                            domain="['|',('last_reading','&lt;', (context_today() + relativedelta(day=01, months=0, days=0)).strftime('%%Y-%%m-%%d')),
								 ('last_reading','&gt;', (context_today() + relativedelta(day=01, months=1, days=-1)).strftime('%%Y-%%m-%%d')) ]"/>

                    <group expand="1" string="Group By...">
                        <filter string="Partner" name="partner" context="{'group_by':'partner_id'}"/>
                        <filter string="Agreement" name="agreement" context="{'group_by':'agreement_id'}"/>
                        <filter string="Type" name="type" context="{'group_by':'type_id'}"/>
                        <filter string="Agreement Type" name="agreement_type"
                                context="{'group_by':'agreement_type_id'}"/>
                        agreement_type_id
                    </group>
                </search>
            </field>
        </record>

        <record id="view_service_equipment_graph" model="ir.ui.view">
            <field name="name">service.equipment.graph</field>
            <field name="model">service.equipment</field>
            <field name="arch" type="xml">
                <graph string="picking_report for stock" type="pivot">

                    <field name="product_id" type="row"/>
                    <field name="readings_status"/>
                    <field name="total_revenues" type="measure"/>
                    <field name="total_costs" type="measure"/>
                </graph>
            </field>
        </record>


        <record id="action_service_equipment_history" model="ir.actions.act_window">
            <field name="name">Equipments History</field>
            <field name="res_model">service.equipment.history</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree</field>
        </record>

        <menuitem name="Equipment History" id="menu_service_equipment_history" action="action_service_equipment_history"
                  parent="base.menu_service" groups="base.group_service_equipment_advanced"
                  sequence="400"/>


        <record id="action_service_equipment" model="ir.actions.act_window">
            <field name="name">Equipments</field>
            <field name="res_model">service.equipment</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form,graph</field>
        </record>

        <menuitem name="Equipment" id="menu_service_equipment" action="action_service_equipment"
                  parent="base.menu_service" sequence="500"/>


        <!-- <record id="action_update_meter_status" model="ir.values" > <field name="name">Update Meter Status</field> <field name="model_id" eval="'service.equipment'"/>
            <field name="model">service.equipment</field> <field name="key">action</field> <field name="key2">client_action_multi</field> <field name="value" eval="'self.update_meter_status()'"/>
            </record> -->
        <record id="action_update_meter_status" model="ir.actions.server">
            <field name="name">Update Meter Status</field>
            <field name="model_id" ref="model_service_equipment"/>
            <field name="state">code</field>
            <field name="code">action = self._compute_readings_status(cr, uid, context.get('active_ids', []),
                context=context)
            </field>
        </record>

        <record id="more_item_update_meter_status" model="ir.values">
            <field name="key2" eval="'client_action_multi'"/>
            <field name="model" eval="'service.equipment'"/>
            <field name="name">Update Meter Status</field>
            <field name="value" eval="'ir.actions.server,%d'%action_update_meter_status"/>
        </record>

        <record id="action_update_costs_and_revenues" model="ir.actions.server">
            <field name="name">Update Costs And Revenues</field>
            <field name="model_id" ref="model_service_equipment"/>
            <field name="state">code</field>
            <field name="code">action = self.costs_and_revenues(cr, uid, context.get('active_ids', []),
                context=context)
            </field>
        </record>

        <record id="more_item_update_costs_and_revenues" model="ir.values">
            <field name="key2" eval="'client_action_multi'"/>
            <field name="model" eval="'service.equipment'"/>
            <field name="name">Update Costs And Revenues</field>
            <field name="value" eval="'ir.actions.server,%d'%action_update_costs_and_revenues"/>
        </record>


        <record id="view_service_equipment_type_form" model="ir.ui.view">
            <field name="name">Services Equipment Type</field>
            <field name="model">service.equipment.type</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="name"/>
                        <field name="categ_id"/>
                    </group>
                    <field name="consumable_item_ids">
                        <tree editable="bottom">
                            <field name="product_id"/>
                            <field name="colors"/>
                            <field name="shelf_life"/>
                            <field name="uom_shelf_life"/>
                            <field name="max_qty"/>
                        </tree>
                    </field>
                </form>
            </field>
        </record>

        <record id="action_service_equipment_type" model="ir.actions.act_window">
            <field name="name">Services Equipment Type</field>
            <field name="res_model">service.equipment.type</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>


        <menuitem name="Equipment Type" id="menu_service_equipment_type" action="action_service_equipment_type"
                  parent="base.menu_service_config_equi"
                  sequence="200"/>

        <record id="view_service_equipment_categ_form" model="ir.ui.view">
            <field name="name">Services Equipment Category</field>
            <field name="model">service.equipment.category</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="name"/>
                    </group>
                    <group>
                        <field name="out_type_id"/>
                        <field name="in_type_id"/>
                    </group>
                    <field name="template_meter_ids">
                        <tree editable="bottom">
                            <field name="product_id"/>
                            <field name="meter_categ_id"/>
                            <field name="currency_id"/>
                        </tree>
                    </field>
                </form>
            </field>
        </record>


        <record id="action_service_equipment_category" model="ir.actions.act_window">
            <field name="name">Services Equipment Category</field>
            <field name="res_model">service.equipment.category</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem name="Equipment Category" id="menu_service_equipment_category"
                  action="action_service_equipment_category" parent="base.menu_service_config_equi"
                  sequence="201"/>

        <!-- <record id="action_picking_tree_consume" model="ir.actions.act_window"> <field name="name">Consume Voucher</field> <field name="res_model">stock.picking</field>
            <field name="type">ir.actions.act_window</field> <field name="view_type">form</field> <field name="view_mode">tree,form,calendar</field> <field name="domain"></field>
            <field name="context" eval="{ 'contact_display': 'partner_address', 'search_default_my': 1, 'default_picking_type_code':'internal', 'default_picking_type_id':
            ref('stock.picking_type_consume'), 'search_default_picking_type_id': ref('stock.picking_type_consume'), }" /> <field name="search_view_id" ref="stock.view_picking_internal_search"
            /> </record> <menuitem id="menu_picking_tree_consume" action="action_picking_tree_consume" parent="stock.menu_stock_warehouse_mgmt" sequence="101" /> -->


    </data>

    <data noupdate="1">
        <record id="ir_cron_update_reading_status" model="ir.cron">
            <field name="name">Update reading status</field>
            <field name="interval_type">days</field>
            <field name="interval_number">1</field>
            <field name="numbercall">-1</field>
            <field name="model">service.equipment</field>
            <field name="function">_compute_readings_status</field>
        </record>

        <record id="ir_cron_send_mail_to_reading" model="ir.cron">
            <field name="name">Reminder to make readings</field>
            <field name="interval_type">days</field>
            <field name="interval_number">1</field>
            <field name="numbercall">-1</field>
            <field name="model">service.equipment</field>
            <field name="function">send_mail_todo_today</field>
        </record>
    </data>
</openerp>