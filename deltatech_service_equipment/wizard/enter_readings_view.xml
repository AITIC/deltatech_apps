<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
		<record id="view_service_enter_reading_form" model="ir.ui.view">
			<field name="name">Enter Meter Readings</field>
			<field name="model">service.enter.reading</field>
			<field name="arch" type="xml">
				<form string="Enter Meter Readings">
					<div attrs="{'invisible':[ ('error', '=', '')]}">
						<div class="alert alert-warning  alert-dismissible text-left" role="alert">
							<a href="#" class="close" data-dismiss="alert" aria-label="close">x</a>
							<field name="error" style="height: 50px;"/>
						</div>
					</div>
					<group string="Enter Meter Readings">
						<div class="oe_grey">
							For the selected meters please enter readings
						</div>
					</group>
					<group>
						<field name="date" />
                        <field name="read_by"/>

						<field name="items"  >
							<tree editable="bootom" create="0" delete="0">
								<field name="equipment_id"/>
								<field name="meter_id"/>
								<field name="prev_value" readonly="1"/>
								<field name="counter_value"/>
								<field name="estimated"/>
							</tree>
						</field>
						<field name="note" />
					</group>
					<footer>
						<button name="do_enter" string="_Apply" type="object" class="oe_highlight" />
						or
						<button string="Cancel" class="oe_link" special="cancel" />
					</footer>
				</form>
			</field>
		</record>


		<act_window id="action_service_enter_reading" name="Enter Meter Readings"
			res_model="service.enter.reading" src_model="service.equipment"
			view_mode="form" multi="False" target="new" key2="client_action_multi" />


 

	</data>
</openerp>