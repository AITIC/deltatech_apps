<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>

		<record id="view_commission_compute_total_form" model="ir.ui.view">
			<field name="name">commission.compute.total.form</field>
			<field name="model">commission.compute.total</field>
			<field name="arch" type="xml">
				<form string="Compute Commission">

					<group string="Compute Commission">
						<field name="from_date"/>
						<field name="to_date"/>
					</group>

					<footer>
						<button name="do_compute" string="_Apply" type="object"
							class="oe_highlight" />
						or
						<button string="Cancel" class="oe_link" special="cancel" />
					</footer>
				</form>
			</field>
		</record>


		<act_window id="action_commission_compute_total" name="Total Commission"
			res_model="commission.compute.total"
			view_mode="form" multi="True" target="new" />


		<menuitem name="Total Commission" id="menu_commission_compute_total"
					action="action_commission_compute_total" parent="menu_commission" groups="base.group_sale_manager"/>

		<record id="view_commission_compute_tree" model="ir.ui.view">
			<field name="name">commission.compute.total.line</field>
			<field name="model">commission.compute.total.line</field>
			<field name="arch" type="xml">
				<tree>
					<field name="user_id"/>
					<field name="commission" sum="1"/>
				</tree>
			</field>
		</record>


		<record id="view_commission_compute_form" model="ir.ui.view">
			<field name="name">commission.compute.form</field>
			<field name="model">commission.compute</field>
			<field name="arch" type="xml">
				<form string="Compute Commission">


					<group string="Compute Commission">
						<div class="oe_grey">
							For the selected invoice line will compute commission
						</div>
					</group>
					<group>
						<field name="invoice_line_ids" nolabel="1"/>
					</group>
					<footer>
						<button name="do_compute" string="_Apply" type="object"
							class="oe_highlight" />
						or
						<button string="Cancel" class="oe_link" special="cancel" />
					</footer>
				</form>
			</field>
		</record>


		<act_window id="action_commission_compute" name="Compute Commission"
			res_model="commission.compute" 
			src_model="sale.margin.report"
			view_mode="form" multi="True" target="new" key2="client_action_multi" />


		<menuitem name="Compute Commission" id="menu_commission_compute"
					action="action_commission_compute" parent="menu_commission" groups="base.group_sale_manager"/>
				
	
	</data>
</openerp>