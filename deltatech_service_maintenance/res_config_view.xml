<?xml version="1.0" encoding="utf-8"?><openerp>    <data>        <record id="view_service_config_settings" model="ir.ui.view">            <field name="name">Service Settings</field>            <field name="model">service.config.settings</field>            <field name="arch" type="xml">                                  <group name="default_alias">                        <label for="id" string="Leads Email Alias"/>                        <div attrs="{'invisible': [('alias_domain', '=', False)]}">                            <div>                                <field name="alias_prefix" class="oe_inline" attrs="{'required': [('alias_domain', '!=', False)]}"/>                                @                                <field name="alias_domain" class="oe_inline" readonly="1"/>                            </div>                            <p>                                All emails sent to this address and processed by the mailgateway                                will create a new service notification.                            </p>                        </div>                        <div attrs="{'invisible': [('alias_domain', '!=', False)]}">                            <p>                                To be able to set your Leads Email Alias, you need to fill your alias domain first.                            </p>                            <button type="action" name="%(base_setup.action_general_configuration)d"                                string="Configure alias domain" class="oe_link" />                        </div>                    </group>            </field>        </record>        <menuitem id="base.menu_service_config" name="Service" parent="base.menu_config"            sequence="1" action="base.action_service_config"/>    </data></openerp>